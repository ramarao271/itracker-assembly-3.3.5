                    <plugin>
                        <artifactId>maven-antrun-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>output-info-process-sources</id>
                                <phase>process-sources</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <echo>running process-sources phase</echo>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>output-info-process-test-classes</id>
                                <phase>process-test-classes</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <echo>running process-test-classes phase</echo>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>output-info-pre-integration-test</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <target>
                                        <echo>running pre-integration-test phase</echo>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>override-log4j-with-console-output</id>
                                <phase>test-compile</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <skip>false</skip>
                                    <target>
                                        <copy overwrite="true" file="${project.build.testOutputDirectory}/log4j2.xml" todir="${project.build.testOutputDirectory}/" />
                                    </target>
                                </configuration>
                            </execution>

                            <execution>
                                <id>hsql-server-start</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <failOnError>true</failOnError>
                                    <target>
                                        <property name="ant.classpath" refid="maven.plugin.classpath" />

                                        <delete failonerror="false" verbose="true">
                                            <fileset dir="${project.basedir}/target" includes="itrackerdev-test*" />
                                        </delete>

                                        <java fork="true" spawn="true" dir="${java.io.tmpdir}" classname="org.hsqldb.Server" classpath="${ant.classpath}">
                                            <arg value="-database.0" />
                                            <arg value="${project.basedir}/target/${selenium.datasource.name}" />
                                            <arg value="-dbname.0" />
                                            <arg value="${selenium.datasource.name}" />
                                            <arg value="-port" />
                                            <arg value="${selenium.datasource.port}" />
                                            <arg value="--no_system_exit" />
                                            <arg value="true" />
                                        </java>
                                        <echo>Database started on ${selenium.datasource.port}:${selenium.datasource.name} (CP: ${ant.classpath})
                                        </echo>
                                    </target>
                                </configuration>
                            </execution>
                            <execution>
                                <id>hsql-server-stop</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>run</goal>
                                </goals>
                                <configuration>
                                    <failOnError>true</failOnError>
                                    <target>
                                        <property name="plugin_classpath" refid="maven.plugin.classpath" />

                                        <echo>DB Shutdown...</echo>
                                        <concat destfile="${project.build.directory}/temp.bsh">
                                        <![CDATA[
                                        import java.sql.*;

                                        try {
                                            Class.forName("org.hsqldb.jdbcDriver");
                                            String url = bsh.args[0];
                                            Connection con = DriverManager.getConnection(url, "sa", "");
                                            String sql = "SHUTDOWN";
                                            Statement stmt = con.createStatement();
                                            stmt.executeUpdate(sql);
                                            stmt.close();
                                            print("shutdown " + url + " complete");
                                        } catch (Exception e) {
                                            e.printStackTrace();
                                        }
                                        ]]>
                                        </concat>
                                        <echo>DB Shutdown script created: ${project.build.directory}/temp.bsh</echo>

                                        <java classname="bsh.Interpreter" classpath="${plugin_classpath}">
                                            <arg line="${project.build.directory}/temp.bsh jdbc:hsqldb:hsql://localhost:${selenium.datasource.port}/${selenium.datasource.name}" />
                                        </java>
                                        <echo>Shut-down DB jdbc:hsqldb:hsql://localhost:${selenium.datasource.port}/${selenium.datasource.name}</echo>
                                        <delete failonerror="false" verbose="true">
                                            <fileset dir="${project.build.directory}" includes="temp.bsh" />
                                            <fileset dir="${java.io.tmpdir}/hsqldb" includes="itrackerdev-test*" />
                                        </delete>
                                    </target>
                                </configuration>
                            </execution>
