                        </dependencies>
                    </plugin>


                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>selenium-maven-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>start-selenium</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>start-server</goal>
                                </goals>
                            </execution>
                            <execution>
                                <id>stop-selenium</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop-server</goal>
                                </goals>
                            </execution>
                        </executions>

                        <configuration>
                            <startURL>http://${application.host}:${application.port}/${application.path}</startURL>
                            <suite>none</suite>
                            <skip>${selenium.server.skip}</skip>
                            <background>true</background>
                            <!--old(<multiWindow>true</multiWindow>-->
                            <singleWindow>true</singleWindow>
                            <port>${selenium.port}</port>
                            <browser>${selenium.browser}</browser>
                            <timeout>50</timeout>
                            <systemProperties>
                                <selenium.pathToFirefoxBinary>${selenium.firefox.binary}</selenium.pathToFirefoxBinary>
                            </systemProperties>
                            <debug>true</debug>
                            <logOutput>true</logOutput>
                            <logFile>${project.build.directory}/selenium/selenium-plugin.log</logFile>
                            <browserSideLog>true</browserSideLog>
                            <ensureCleanSession>false</ensureCleanSession>
                        </configuration>
                    </plugin>


                    <plugin>
                        <groupId>org.eclipse.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <configuration>

                            <stopPort>${jetty.stopPort}</stopPort>
                            <stopKey>foo</stopKey>
                            <systemProperties>
                                <systemProperty>
                                    <name>java.naming.factory.initial</name>
                                    <value>org.eclipse.jetty.jndi.InitialContextFactory</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>java.naming.provider.url</name>
                                    <value>rmi://localhost:8099</value>
                                </systemProperty>
                            </systemProperties>
                            <daemon>true</daemon>
                            <useProvidedScope>false</useProvidedScope>
                            <waitForChild>false</waitForChild>
                            <webAppConfig>
                                <contextPath>/${application.path}</contextPath>
                                <jettyEnvXml>${project.build.testOutputDirectory}/jetty-env.xconf</jettyEnvXml>
                            </webAppConfig>
                            <jettyXml>${project.build.testOutputDirectory}/jetty.xconf</jettyXml>
                            <httpConnector>
                                <port>${it.application.port}</port>
                                <idleTimeout>60000</idleTimeout>
                            </httpConnector>
                        </configuration>
                        <executions>
                            <execution>
                                <id>start-jetty</id>
                                <phase>pre-integration-test</phase>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                                <configuration>
                                </configuration>
                            </execution>
                            <execution>
                                <id>stop-jetty</id>
                                <phase>post-integration-test</phase>
                                <goals>
                                    <goal>stop</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>

                    <plugin>
                        <artifactId>maven-surefire-plugin</artifactId>
                        <configuration>
                            <!--skip>true</skip-->
                        </configuration>
                        <executions>
                            <execution>
                                <id>pre-selenium-testing</id>
                                <phase>test</phase>
                                <goals>
                                    <goal>test</goal>
                                </goals>
                                <configuration>
                                    <!--skip>false</skip-->
                                    <includes>
                                        <include>org/itracker/**/*PreTest.java</include>
                                    </includes>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>


                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-failsafe-plugin</artifactId>

                        <executions>
                            <execution>
                                <id>failsafe-selenium-integration-test</id>
                                <goals>
                                    <goal>integration-test</goal>
                                    <goal>verify</goal>
                                </goals>

                                <configuration>
                                    <test>${selenium.test}</test>
                                    <useSystemClassLoader>true</useSystemClassLoader>
                                    <!--reportsDirectory>${project.build.directory}/failsafe-selenium-reports</reportsDirectory-->
                                    <skip>${selenium.skip}</skip>
                                    <includes>
                                        <include>org/itracker/**/*SeleniumIT.java</include>
                                    </includes>
                                </configuration>
                            </execution>

                        </executions>
                        <dependencies>
                            <dependency>
                                <groupId>org.eclipse.jetty</groupId>
                                <artifactId>jetty-plus</artifactId>
                                <version>${maven-jetty-plugin.version}</version>
                            </dependency>
                            <dependency>
                                <groupId>org.eclipse.jetty</groupId>
                                <artifactId>jetty-jndi</artifactId>
                                <version>${maven-jetty-plugin.version}</version>
                            </dependency>
                        </dependencies>
                    </plugin>
                </plugins>
            </build>
            <dependencies>


                <dependency>
                    <groupId>org.eclipse.jetty</groupId>
                    <artifactId>jetty-server</artifactId>
                    <version>${maven-jetty-plugin.version}</version>
                    <scope>test</scope>
                </dependency>
                <dependency>
                    <groupId>org.eclipse.jetty</groupId>
                    <artifactId>jetty-jndi</artifactId>
                    <version>${maven-jetty-plugin.version}</version>
                    <scope>test</scope>
                </dependency>
            </dependencies>
        </profile>

    </profiles>
